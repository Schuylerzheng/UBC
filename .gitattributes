# ==============================
# Unreal Engine .gitattributes

# LFS for large media/content files
# Unreal Engine file types.
*.uasset filter=lfs diff=lfs merge=lfs -text
*.umap filter=lfs diff=lfs merge=lfs -text
# Raw Content file types.
*.3ds filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.exr filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.xcf filter=lfs diff=lfs merge=lfs -text
# Anything in `/RawContent` dir.
/RawContent/**/* filter=lfs diff=lfs merge=lfs -text
# Text-based config files — normalize to LF
*.ini    text eol=crlf
*.cfg    text eol=crlf
*.json   text eol=crlf
*.xml    text eol=crlf
*.csv    text eol=crlf
# Source code — ensure consistent LF endings
*.h      text eol=CRLF
*.cpp    text eol=crlf
*.cs     text eol=crlf
*.py     text eol=crlf
# Shader files
*.ush    text eol=crlf
*.usf    text eol=crlf
# Mark lockable files (to avoid concurrent edits)
*.uasset lockable
*.umap   lockable
# Make sure submodule pointers aren’t messed up
# (if you’re using any)
.gitmodules text eol=crlf
# Prevent accidentally committing large folders
/Build/**     filter=lfs diff=lfs merge=lfs -text
/Plugins/**   filter=lfs diff=lfs merge=lfs -text
# Optional: treat README, LICENSE, etc. as text
README.md text
LICENSE   text
# I think added by Git LFS to make sure that it is not included with LFS
*.md !text !filter !merge !diff
*.ini !text !filter !merge !diff
*.gitattributes !text !filter !merge !diff
*.gitignore !text !filter !merge !diff
*.cpp !text !filter !merge !diff
*.h !text !filter !merge !diff
*.cs !text !filter !merge !diff
